{
  "compilerOptions": {
    // "importHelpers": true,
    // "allowSyntheticDefaultImports": true,
    // "skipLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "target": "esnext",
    "useDefineForClassFields": true,
    "strictNullChecks": false,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types":["vite/client","jest","element-plus/global"],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "tests/ts/**/*.ts", "tests/ts/**/*.tsx"],
  "exclude": [
    "node_modules"
  ]
}
